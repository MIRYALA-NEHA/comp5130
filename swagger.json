{
    "openapi": "3.0.0",
    "info": {
        "title": "CourseHub API",
        "version": "1.0.0",
        "description": "This is a simple API for CourseHub application",
        "contact": {
            "name": "API Support",
            "url": "localhost",
            "email": "neha_miryala@student.uml.edu"
        }
    },
    "servers": [
        {
            "url": "https://localhost:8000",
            "description": "Development server"
        }
    ],
    "paths": {
        "/course/register": {
            "post": {
                "summary": "Register a new course",
                "tags": [
                    "Course"
                ],
                "description": "Adds a new course to the catalog. Requires token authentication.",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "title",
                                    "description",
                                    "price"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "description": "The title of the course"
                                    },
                                    "description": {
                                        "type": "string",
                                        "description": "A brief summary of the course content"
                                    },
                                    "price": {
                                        "type": "number",
                                        "description": "Price of the course"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Course registered successfully."
                    },
                    "401": {
                        "description": "Unauthorized access."
                    }
                }
            }
        },
        "/course": {
            "get": {
                "summary": "Fetch all courses",
                "tags": [
                    "Course"
                ],
                "description": "Retrieves a list of all courses available in the catalog.",
                "responses": {
                    "200": {
                        "description": "A list of courses.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "integer"
                                            },
                                            "title": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type": "string"
                                            },
                                            "price": {
                                                "type": "number"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/course/best": {
            "get": {
                "summary": "Fetch best-selling courses",
                "tags": [
                    "Course"
                ],
                "description": "Retrieves a list of top-selling courses based on sales data.",
                "responses": {
                    "200": {
                        "description": "A list of top-selling courses.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "integer"
                                            },
                                            "title": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type": "string"
                                            },
                                            "price": {
                                                "type": "number"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/course/{id}": {
            "get": {
                "summary": "Fetch a single course by ID",
                "tags": [
                    "Course"
                ],
                "description": "Retrieves detailed information about a specific course by its ID.",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "The ID of the course to retrieve"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detailed course information."
                    },
                    "404": {
                        "description": "Course not found."
                    }
                }
            }
        },
        "/user/profile": {
            "post": {
                "summary": "Get user profile",
                "tags": [
                    "User"
                ],
                "description": "Fetches the user's profile details. Requires token authentication.",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully retrieved profile."
                    },
                    "401": {
                        "description": "Authorization information is missing or invalid."
                    }
                }
            },
            "put": {
                "summary": "Update user profile",
                "tags": [
                    "User"
                ],
                "description": "Updates the user's profile information. Requires token authentication.",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "city": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successfully updated profile."
                    },
                    "401": {
                        "description": "Authorization information is missing or invalid."
                    }
                }
            }
        },
        "/user/login": {
            "post": {
                "summary": "Login a user",
                "tags": [
                    "User"
                ],
                "description": "Authenticates a user and returns a token.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "description": "User's email",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "description": "User's password",
                                        "example": "password123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful."
                    },
                    "401": {
                        "description": "Invalid credentials."
                    }
                }
            }
        },
        "/user/register": {
            "post": {
                "summary": "Register a new user",
                "tags": [
                    "User"
                ],
                "description": "Registers a new user and returns a token.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "email",
                                    "password",
                                    "name",
                                    "profession"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "description": "User's email",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "description": "User's password",
                                        "example": "password123"
                                    },
                                    "name": {
                                        "type": "string",
                                        "description": "User's name",
                                        "example": "Bob"
                                    },
                                    "profession": {
                                        "type": "string",
                                        "description": "User's profession",
                                        "example": "Developer"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Registration successful."
                    },
                    "400": {
                        "description": "Bad request."
                    }
                }
            }
        }
    },
    "components": {},
    "tags": []
}